<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Poplection.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#8B4BFF" Padding="24" CornerRadius="0">
            <Label Text="Poplection" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <StackLayout HorizontalOptions="Center">
            <Image x:Name="MainPageLogo"  Source="https://upload.wikimedia.org/wikipedia/en/thumb/c/cc/Funko.svg/1200px-Funko.svg.png" WidthRequest="200"></Image>
            <Label x:Name="UsernameLabel" Text="Username:"/>
            <Entry x:Name="UsernameInput" Placeholder="Your username here"/>
            <Label x:Name="PasswordLabel" Text="Password:"/>
            <Entry x:Name="PasswordInput" Placeholder="Your Password here" IsPassword="true"/>
            <Button x:Name="LoginButton" Text="Login" BackgroundColor="#8B4BFF" TextColor="White" Clicked="LoginButton_Clicked"/>
            <Button x:Name="RegisterButton" Text="Register" BackgroundColor="#8B4BFF" TextColor="White" Clicked="RegisterButton_Clicked"/>
        </StackLayout>
    </StackLayout>

</ContentPage>
