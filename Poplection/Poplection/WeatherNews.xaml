<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Poplection.WeatherNews"
             BackgroundImageSource="https://npokennis.nl/json-api/bundles/thumbs/i/14000/mod_media_image/14026.w599.cecdb2e.8fb211b.jpg">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center">
            <Label Margin="0,20,0,0" x:Name="WeatherPlaceLabel" FontSize="30" TextColor="{StaticResource FontColorWhite}"/>
            <Label x:Name="WeatherDescriptionLabel" FontSize="28" TextColor="{StaticResource FontColorWhite}"/>
            <StackLayout Orientation="Horizontal">
                <Image x:Name="WeatherImageLabel" WidthRequest="40" HeightRequest="40"/>
                <Label x:Name="WeatherTemperatureLabel" HorizontalTextAlignment="Center" FontSize="27" TextColor="{StaticResource FontColorWhite}"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>